<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid HorizontalAlignment="Left" Height="300" Margin="113,10,0,0" VerticalAlignment="Top" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Users" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFCBCBCB" FontSize="16"/>
        <Button Content="Patients" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFCBCBCB" FontSize="16"/>
        <Button Content="Items" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Background="#FFCBCBCB" FontSize="16"/>
        <Button Content="Kits" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Background="#FFCBCBCB" FontSize="16"/>
    </Grid>
</Window>
